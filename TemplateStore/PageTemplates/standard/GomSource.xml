<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_GROUP tabs="top">

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Page"/>
        <LANGINFO lang="DE" label="Seite"/>
      </LANGINFOS>

      <CMS_INPUT_TEXT name="pt_title" hFill="yes" singleLine="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Page title"/>
          <LANGINFO lang="DE" label="Seitentitel"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_TOGGLE name="pt_add_sections" hFill="yes" singleLine="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Possibility to add paragraphs"/>
          <LANGINFO lang="DE" label="Möglichkeit Absätze hinzuzufügen"/>
        </LANGINFOS>
      </CMS_INPUT_TOGGLE>

      <CMS_INPUT_TOGGLE name="pt_show_chat" hidden="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Show Chatbot"/>
          <LANGINFO lang="*" label="Chatbot anzeigen"/>
        </LANGINFOS>
      </CMS_INPUT_TOGGLE>

    </CMS_GROUP>

    <CMS_GROUP name="pt_banner_group">
      <LANGINFOS>
        <LANGINFO lang="*" label="Banner"/>
      </LANGINFOS>

      <FS_REFERENCE name="pt_picture" hFill="yes" upload="yes" useLanguages="no">
        <FILTER>
          <ALLOW type="picture"/>
        </FILTER>
        <LANGINFOS>
          <LANGINFO lang="*" label="Header Picture" description="Please choose a picture"/>
          <LANGINFO lang="DE" label="Header Bild" description="Bitte wählen Sie ein Bild aus"/>
        </LANGINFOS>
        <PROJECTS>
          <LOCAL name=".">
            <SOURCES>
              <FOLDER name="images" store="mediastore"/>
            </SOURCES>
          </LOCAL>
        </PROJECTS>
      </FS_REFERENCE>

      <CMS_INPUT_TEXTAREA name="pt_text" hFill="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Header Text"/>
        </LANGINFOS>
      </CMS_INPUT_TEXTAREA>

    </CMS_GROUP>

  </CMS_GROUP>

  <FS_BUTTON
    name="pt_create_section"
    hidden="yes"
    onClick="class:NewSection"
    onDrop="class:NewSection"
    style="link"
    useLanguages="no">
    <DROPTYPES>
      <TYPE value="section"/>
    </DROPTYPES>
    <LANGINFOS>
      <LANGINFO lang="*" label=" "/>
    </LANGINFOS>
  </FS_BUTTON>

</CMS_MODULE>