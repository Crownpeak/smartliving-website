<?xml version="1.0" encoding="UTF-8"?>
<RULES>
	<!-- Formatting restriction (only valid currency values): tt_price -->
	<RULE>
		<WITH>
			<OR>
				<AND>
					<EQUAL>
						<PROPERTY name="LANG" source="#global"/>
						<TEXT>DE</TEXT>
					</EQUAL>
					<MATCHES regex="^\d+(,\d{1,2})?\s?€?$">
						<PROPERTY name="VALUE" source="tt_price"/>
					</MATCHES>
				</AND>
				<AND>
					<EQUAL>
						<PROPERTY name="LANG" source="#global"/>
						<TEXT>EN</TEXT>
					</EQUAL>
					<MATCHES regex="^\$?\s?\d+(.\d{1,2})?$">
						<PROPERTY name="VALUE" source="tt_price"/>
					</MATCHES>
				</AND>
				<MATCHES regex="">
					<PROPERTY name="VALUE" source="tt_price"/>
				</MATCHES>
			</OR>
		</WITH>
		<DO>
			<VALIDATION scope="SAVE">
				<PROPERTY name="VALID" source="tt_price"/>
				<MESSAGE lang="*" text="Bitte das richtiges Format angeben."/>
				<MESSAGE lang="EN" text="Please enter a correct format."/>
			</VALIDATION>
		</DO>
	</RULE>
	<!-- Mandatory: tt_price -->
	<RULE>
		<IF>
			<EQUAL>
				<PROPERTY name="LANG" source="#global"/>
				<PROPERTY name="MASTER" source="#global"/>
			</EQUAL>
		</IF>
		<WITH>
			<PROPERTY name="EMPTY" source="tt_price"/>
		</WITH>
		<DO>
			<NOT>
				<VALIDATION scope="Release">
					<PROPERTY name="VALID" source="tt_price"/>
					<MESSAGE lang="*" text="Bitte einen Preis hinzufügen."/>
					<MESSAGE lang="EN" text="Please add a price."/>
				</VALIDATION>
			</NOT>
		</DO>
	</RULE>
