	<!-- Manual products are only available, if the corresponding option is selected in: tt_relatedproducts -->
	<RULE>
		<WITH>
			<EQUAL>
				<PROPERTY name="ENTRY" source="tt_showrelatedproducts"/>
				<TEXT>man</TEXT>
			</EQUAL>
		</WITH>
		<DO>
			<PROPERTY name="VISIBLE" source="tt_relatedproducts"/>
		</DO>
	</RULE>
	<!-- Mandatory: tt_relatedproducts, if tt_showrelatedproducts is set to manual -->
	<RULE>
		<IF>
			<EQUAL>
				<PROPERTY name="LANG" source="#global"/>
				<PROPERTY name="MASTER" source="#global"/>
			</EQUAL>
		</IF>
		<WITH>
			<AND>
				<PROPERTY name="EMPTY" source="tt_relatedproducts"/>
				<EQUAL>
					<PROPERTY name="ENTRY" source="tt_showrelatedproducts"/>
					<TEXT>man</TEXT>
				</EQUAL>
			</AND>
		</WITH>
		<DO>
			<NOT>
				<VALIDATION scope="RELEASE">
					<PROPERTY name="VALID" source="tt_relatedproducts"/>
					<MESSAGE lang="*" text="Select as least one related product."/>
					<MESSAGE lang="DE" text="Wähle mindestens ein ähnliches Produkt aus."/>
				</VALIDATION>
			</NOT>
		</DO>
	</RULE>
</RULES>