<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_GROUP tabs="top">

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Text"/>
      </LANGINFOS>

      <CMS_INPUT_TEXT name="st_headline" hFill="yes" singleLine="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Headline"/>
          <LANGINFO lang="DE" label="Überschrift"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_DOM name="st_text" hFill="yes" rows="20" table="yes">
        <FORMATS>
          <TEMPLATE name="p"/>
        </FORMATS>
        <LANGINFOS>
          <LANGINFO lang="*" label="Text"/>
        </LANGINFOS>
        <LINKEDITORS>
          <LINKEDITOR name="internal_link"/>
          <LINKEDITOR name="external_link"/>
        </LINKEDITORS>
      </CMS_INPUT_DOM>

    </CMS_GROUP>

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Picture"/>
        <LANGINFO lang="DE" label="Bild"/>
      </LANGINFOS>

      <FS_REFERENCE name="st_picture" hFill="yes" upload="yes">
        <FILTER>
          <ALLOW type="media"/>
        </FILTER>
        <LANGINFOS>
          <LANGINFO lang="*" label="Picture"/>
          <LANGINFO lang="DE" label="Bild"/>
        </LANGINFOS>
        <PROJECTS>
          <LOCAL name="." uploadFolder="content">
            <SOURCES>
              <FOLDER name="content" store="mediastore"/>
            </SOURCES>
          </LOCAL>
        </PROJECTS>
      </FS_REFERENCE>

      <CMS_INPUT_TEXT name="st_picture_alt" hFill="yes" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Alternative text"/>
          <LANGINFO lang="DE" label="Alternativer Text"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_RADIOBUTTON name="st_picAlignment" gridHeight="3" gridWidth="1" hFill="yes" useLanguages="no">
        <ENTRIES>
          <ENTRY value="fullWidth">
            <LANGINFOS>
              <LANGINFO lang="*" label="Full width"/>
              <LANGINFO lang="DE" label="Volle Breite"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="left">
            <LANGINFOS>
              <LANGINFO lang="*" label="Left"/>
              <LANGINFO lang="DE" label="Links"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="right">
            <LANGINFOS>
              <LANGINFO lang="*" label="Right"/>
              <LANGINFO lang="DE" label="Rechts"/>
            </LANGINFOS>
          </ENTRY>
        </ENTRIES>
        <LANGINFOS>
          <LANGINFO lang="*" label="Picturealignment" description=""/>
          <LANGINFO lang="DE" label="Bildausrichtung" description=""/>
        </LANGINFOS>
      </CMS_INPUT_RADIOBUTTON>

      <CMS_INPUT_TOGGLE name="st_frame" type="radio" hFill="yes" singleLine="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Add a frame to the picture"/>
          <LANGINFO lang="DE" label="Füge einen Rahmen zu dem Bild hinzu"/>
        </LANGINFOS>
        <OFF>
          <LANGINFO lang="*" label="No, I do not want a frame"/>
          <LANGINFO lang="DE" label="Nein, ich will keinen Rahmen"/>
        </OFF>
        <ON>
          <LANGINFO lang="*" label="Yes, I want a frame"/>
          <LANGINFO lang="DE" label="Ja, ich will einen Rahmen"/>
        </ON>
      </CMS_INPUT_TOGGLE>

    </CMS_GROUP>

  </CMS_GROUP>

</CMS_MODULE>