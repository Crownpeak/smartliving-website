<?xml version="1.0" encoding="UTF-8"?>
<RULES>
	<!-- Mandatory: st_slide (masterLanguage) -->
	<RULE>
		<IF>
			<EQUAL>
				<PROPERTY name="LANG" source="#global"/>
				<PROPERTY name="MASTER" source="#global"/>
			</EQUAL>
		</IF>
		<WITH>
			<NOT>
				<PROPERTY name="EMPTY" source="st_slide"/>
			</NOT>
		</WITH>
		<DO>
			<VALIDATION scope="Save">
				<PROPERTY name="VALID" source="st_slide"/>
				<MESSAGE lang="*" text="You need at least one element."/>
				<MESSAGE lang="DE" text="Es wird mindestens ein Eintrag benötigt."/>
			</VALIDATION>
		</DO>
	</RULE>
	<!-- Mandatory: st_slide (not masterLanguage) -->
	<RULE>
		<IF>
			<NOT>
				<EQUAL>
					<PROPERTY name="LANG" source="#global"/>
					<PROPERTY name="MASTER" source="#global"/>
				</EQUAL>
			</NOT>
		</IF>
		<WITH>
			<NOT>
				<AND>
					<PROPERTY name="EMPTY" source="st_pictures"/>
					<PROPERTY name="TRANSLATED" source="#global"/>
				</AND>
			</NOT>
		</WITH>
		<DO>
			<VALIDATION scope="Save">
				<PROPERTY name="VALID" source="st_slide"/>
				<MESSAGE lang="*" text="You need at least one element."/>
				<MESSAGE lang="DE" text="Es wird mindestens ein Eintrag benötigt."/>
			</VALIDATION>
		</DO>
	</RULE>
</RULES>