<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_INPUT_TEXT name="st_headline" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Headline"/>
      <LANGINFO lang="DE" label="Überschrift"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <FS_INDEX name="st_youtubeVideo" height="1" useLanguages="yes" viewMode="details">
    <LANGINFOS>
      <LANGINFO lang="*" label="YouTube Video"/>
    </LANGINFOS>
    <SOURCE name="YouTube-DAP-Integration/YoutubeVideoDataAccessPlugin"/>
  </FS_INDEX>

  <CMS_INPUT_DOM name="st_text" hFill="yes" useLanguages="yes">
    <FORMATS>
      <TEMPLATE name="teaser"/>
    </FORMATS>
    <LANGINFOS>
      <LANGINFO lang="*" label="Text"/>
    </LANGINFOS>
  </CMS_INPUT_DOM>

  <FS_CATALOG name="st_videoElements" useLanguages="yes" viewMode="details">
    <LANGINFOS>
      <LANGINFO lang="*" label="Video contextual Elements"/>
      <LANGINFO lang="DE" label="Video kontextuelle Elemente"/>
    </LANGINFOS>
    <TEMPLATES type="section">
      <TEMPLATE uid="interactive_video_text_image"/>
      <TEMPLATE uid="interactive_video_product"/>
    </TEMPLATES>
  </FS_CATALOG>

  <FS_BUTTON
    name="st_interactiveVideo"
    alwaysEnabled="no"
    hFill="no"
    onClick="class:InteractiveVideoButton"
    style="button"
    useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Edit Timeline elements"/>
      <LANGINFO lang="DE" label="Timeline Elemente bearbeiten"/>
    </LANGINFOS>
    <PARAMS>
      <PARAM name="catalog">#field.st_videoElements</PARAM>
      <PARAM name="videoUrlResolver">class:InteractiveVideoUrlParser</PARAM>
      <PARAM name="videoUrlPattern">https://www.youtube.com/watch?v=${id}</PARAM>
      <PARAM name="videoIdField">#field.st_youtubeVideo</PARAM>
    </PARAMS>
  </FS_BUTTON>

  <CMS_INPUT_TOGGLE name="st_autoPlay" type="radio" hFill="yes" noBreak="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Autoplay" description="Autoplay"/>
      <LANGINFO lang="DE" label="Autoplay" description="Automatisches Abspielen"/>
    </LANGINFOS>
    <OFF>
      <LANGINFO lang="*" label="No"/>
      <LANGINFO lang="DE" label="Nein"/>
    </OFF>
    <ON>
      <LANGINFO lang="*" label="Yes"/>
      <LANGINFO lang="DE" label="Ja"/>
    </ON>
  </CMS_INPUT_TOGGLE>

  <CMS_INPUT_TOGGLE name="st_loopVideo" type="radio" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Loop video"/>
      <LANGINFO lang="DE" label="Video wiederholen"/>
    </LANGINFOS>
    <OFF>
      <LANGINFO lang="*" label="No"/>
      <LANGINFO lang="DE" label="Nein"/>
    </OFF>
    <ON>
      <LANGINFO lang="*" label="Yes"/>
      <LANGINFO lang="DE" label="Ja"/>
    </ON>
  </CMS_INPUT_TOGGLE>

  <CMS_GROUP name="sectionLifespan">
    <LANGINFOS>
      <LANGINFO lang="*" label="Validity period"/>
    </LANGINFOS>

    <CMS_INPUT_DATE name="st_sectionLifespanFrom" hFill="yes">
      <LANGINFOS>
        <LANGINFO lang="*" label="Gültigkeitsbeginn"/>
        <LANGINFO lang="EN" label="Validation start date"/>
      </LANGINFOS>
    </CMS_INPUT_DATE>

    <CMS_INPUT_DATE name="st_sectionLifespanTo" hFill="yes">
      <LANGINFOS>
        <LANGINFO lang="*" label="Gültigkeitsende"/>
        <LANGINFO lang="EN" label="Validation end date"/>
      </LANGINFOS>
    </CMS_INPUT_DATE>

  </CMS_GROUP>

</CMS_MODULE>