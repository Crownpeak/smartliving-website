<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_INPUT_TEXT name="st_name" hFill="yes" singleLine="no" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Name"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_DOM name="st_description" hFill="yes" useLanguages="yes">
    <LANGINFOS>
      <LANGINFO lang="*" label="Description"/>
    </LANGINFOS>
  </CMS_INPUT_DOM>

  <CMS_INPUT_NUMBER name="st_lat" type="double" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Latitude" format="##.#######"/>
    </LANGINFOS>
  </CMS_INPUT_NUMBER>

  <CMS_INPUT_NUMBER name="st_long" type="double" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Longitude" format="##.#######"/>
    </LANGINFOS>
  </CMS_INPUT_NUMBER>

  <CMS_INPUT_LINK name="st_route_link" hFill="yes" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Route Link"/>
    </LANGINFOS>
    <LINKEDITORS>
      <LINKEDITOR name="external_link"/>
    </LINKEDITORS>
  </CMS_INPUT_LINK>

  <CMS_GROUP name="sectionLifespan">
    <LANGINFOS>
      <LANGINFO lang="*" label="Validity period"/>
    </LANGINFOS>

    <CMS_INPUT_DATE name="st_sectionLifespanFrom" hFill="yes">
      <LANGINFOS>
        <LANGINFO lang="*" label="Gültigkeitsbeginn"/>
        <LANGINFO lang="EN" label="Validation start date"/>
      </LANGINFOS>
    </CMS_INPUT_DATE>

    <CMS_INPUT_DATE name="st_sectionLifespanTo" hFill="yes">
      <LANGINFOS>
        <LANGINFO lang="*" label="Gültigkeitsende"/>
        <LANGINFO lang="EN" label="Validation end date"/>
      </LANGINFOS>
    </CMS_INPUT_DATE>

  </CMS_GROUP>

</CMS_MODULE>