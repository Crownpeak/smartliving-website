<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_INPUT_TEXT name="lt_button_text" hFill="yes" maxInputLength="40" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Button Text"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <CMS_INPUT_COMBOBOX name="lt_link_toggle" singleLine="no" useLanguages="no">
    <ENTRIES>
      <ENTRY value="internal">
        <LANGINFOS>
          <LANGINFO lang="*" label="Internal Link"/>
          <LANGINFO lang="DE" label="Interner Link"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="external">
        <LANGINFOS>
          <LANGINFO lang="*" label="External Link"/>
          <LANGINFO lang="DE" label="Externer Link"/>
        </LANGINFOS>
      </ENTRY>
      <ENTRY value="product">
        <LANGINFOS>
          <LANGINFO lang="*" label="Product Link"/>
          <LANGINFO lang="DE" label="Produkt Link"/>
        </LANGINFOS>
      </ENTRY>
    </ENTRIES>
    <LANGINFOS>
      <LANGINFO lang="*" label="Choose Link Type"/>
      <LANGINFO lang="DE" label="Link Type auswÃ¤hlen"/>
    </LANGINFOS>
  </CMS_INPUT_COMBOBOX>

  <FS_DATASET name="lt_product_link" hFill="yes" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Button Link"/>
    </LANGINFOS>
    <SOURCES>
      <CONTENT name="product"/>
    </SOURCES>
  </FS_DATASET>

  <FS_REFERENCE name="lt_internal" hFill="yes" sections="no" useLanguages="no">
    <FILTER>
      <ALLOW type="pageref"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Ziel"/>
      <LANGINFO lang="EN" label="Target"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="root" store="sitestore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

  <CMS_INPUT_TEXT name="lt_url" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="URL"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

</CMS_MODULE>