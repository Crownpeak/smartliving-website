<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_INPUT_TEXT name="lt_text" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Anzeigetext"/>
      <LANGINFO lang="EN" label="Displaytext"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

  <FS_REFERENCE name="lt_link" hFill="yes" sections="no" useLanguages="no">
    <FILTER>
      <ALLOW type="file"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Datei"/>
      <LANGINFO lang="EN" label="File"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="files" store="mediastore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

</CMS_MODULE>