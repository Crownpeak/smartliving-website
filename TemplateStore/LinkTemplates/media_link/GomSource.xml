<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <FS_REFERENCE name="lt_link" hFill="yes" useLanguages="no">
    <FILTER>
      <ALLOW type="media"/>
    </FILTER>
    <LANGINFOS>
      <LANGINFO lang="*" label="Link"/>
    </LANGINFOS>
    <PROJECTS>
      <LOCAL name=".">
        <SOURCES>
          <FOLDER name="images" store="mediastore"/>
          <FOLDER name="files" store="mediastore"/>
        </SOURCES>
      </LOCAL>
    </PROJECTS>
  </FS_REFERENCE>

  <CMS_INPUT_TEXT name="lt_text" hFill="yes" singleLine="no" useLanguages="no">
    <LANGINFOS>
      <LANGINFO lang="*" label="Text"/>
    </LANGINFOS>
  </CMS_INPUT_TEXT>

</CMS_MODULE>